<Window x:Class="Patrimonio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patrimonio"
        mc:Ignorable="d"
        Title="Controle de patrimônio" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Button Name="btnEquipamentos" Grid.Row="0" Content="Equipamentos" Click="btnEquipamentos_Click" Width="130" Height="30" />
        <StackPanel Grid.Row="1" Margin="5">
            <DataGrid>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Width="*"/>
                    <DataGridTextColumn Header="Nome" Width="*"/>
                    <DataGridTextColumn Header="Serial" Width="*"/>
                </DataGrid.Columns>
            
            </DataGrid>
            
        </StackPanel>
    </Grid>
</Window>
